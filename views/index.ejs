<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <title>Data</title>
</head>
<body class="bg-dark"">

  
  <div class ="container" style="max-width: 100vh;">
    <div class="row gx-5 justify-content-evenly">

          <div class="col-sm-6 col-md-8">
            <h1 class="text-start mt-5 mb-3 text-light"><%= title %></h1>
  
          </div>

          <div class="col-6 col-md-4">

            <form action="/cari" method="get">
                <input placeholder="Masukkan Nama" type="text" name="nama" class="bg-dark text-light mt-3 form-control">
                <input type="submit" class="mt-3 btn btn-outline-success" value="Cari">  
              <form class="" action="/" method="get">
                  <input type="submit" class="mt-3 btn btn-outline-warning" value="Kembali">
                </form>
            </form>
          </div>

        </div>



        <div class="row gx-5 mt-3 align-items-center max-width-md">

            <table class="table table-dark table-hover table-bordered border-light">
                <thead class="text-center">
                  <tr>
                    <th scope="col">No</th>
                    <th scope="col">Nama</th>
                    <th scope="col">Fakultas</th>
                    <th scope="col">Action</th>
                  </tr>
                </thead>
                <tbody action="/hapus" method="post">
                    <% for (let user of users) { %>
                  <tr>
                    <th scope="row" class="text-center"><%= user.id %></th>
                    <th scope="row"><%= user.nama %></th>
                    <th scope="row"><%= user.fakultas %></th>
                    <th scope="row" class="text-center">
                      <form action="/hapus/<%= user.nama %>" method="post">
                        <input type="hidden" name="_method" value="DELETE">
                        <button class="btn btn-outline-danger" type="submit" value="hapus">Hapus</button>
                      </form>
                    </th>
                  </tr>
                    <% } %>
                </tbody>
              </table>

        </div>


          <div class="row gx-5 mt-5 text-light">

            <div class="col">
                <form action="/tambah" method="post">
                    <h3 class="mb-3">TAMBAH MAHASISWA</h3>
                    <div class="row mb-3">
                      <div class="col-sm-10">
                        <input placeholder="Masukkan Nama" type="text" name="nama" class="bg-dark text-light form-control">
                      </div>
                    </div>
                    <div class="row mb-3">
                      <div class="col-sm-10">
                        <input placeholder="Masukkan Fakultas" type="text" name="fakultas" class="bg-dark text-light form-control">
                      </div>
                    </div>
                    <input type="submit" class="btn btn-outline-primary" value="Tambahkan">
                    </form>
            </div>

            <div class="col">
                <form action="/edit" method="post">
                    <h3 class="mb-3">EDIT MAHASISWA</h3>

                    <div class="row mb-3">
                        <div class="col-sm-10">
                          <input placeholder="No" type="text" name="id" class="bg-dark text-light form-control">
                        </div>
                      </div>

                    <div class="row mb-3">
                      <div class="col-sm-10">
                        <input placeholder="Masukkan Nama" type="text" name="nama" class="bg-dark text-light form-control">
                      </div>
                    </div>

                    <div class="row mb-3">
                      <div class="col-sm-10">
                        <input placeholder="Masukkan Fakultas" type="text" name="fakultas" class="bg-dark text-light form-control">
                      </div>
                    </div>
                    <input type="submit" class="btn btn-outline-warning text-light" value="Edit">
                    </form>

            </div>
          </div>


    </div>
    <footer class="text-light mt-5">
        <div class="container">
            <p class="text-center">Copyright &copy; Jemlok Code IDX</p>
        </div>
    </footer>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous">
    </script>
</body>
</html>